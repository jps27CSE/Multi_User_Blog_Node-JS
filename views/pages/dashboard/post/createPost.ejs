<%- include('../../../partials/head.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css" class="css">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10 my-5">
         <div class="card card-body mx-5 py-5">
            <form action="/posts/create" method="POST" enctype="multipart/form-data">
                 <div class="form-group">
                    <label for="title">Enter Your Post Title</label>
                    <input type="text" name="tite" id="title" class="form-control">
                 </div>
                 <div class="form-group">
                   <label for="tiny-mce-post-body">Enter Your Post Body</label>
                   <textarea name='body' id='tiny-mce-post-body' class='form-control'></textarea>
                 </div>
                 <div class='form-group'>
                      <label for="tags">Enter Some Tags (Max 10)</label>
                      <input type="text" name="tags" id="tags" placeholder= "tag1, tag2, tag3" class="form-control" >
                 </div>
                 <div class="input-group mb-3">
                     <div class="input-group-prepend"> 
                        <span class="input-group-text" id="inputGroupFile" >Upload</span>
                     </div>
                     <div class="custom-file">
                        <input type="file" name="post-thumbnail" class="custom-file-input">
                        <label for="inputGroupFile" class="custom-file-label" >Choose File</label>
                     </div>
                 </div>
                 <input type="submit" class="btn btn-primary" value="Create Post">
            </form>
         </div>

     </div>
</div>
</div>

<%- include('../../../partials/footer.ejs') %>

</body>
</html>

